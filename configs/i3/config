set $mod Mod4

# font for window titles. ISO 10646 = Unicode
font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

## quick terminal
exec lxterminal -t metask
for_window [title="metask"] floating enable;
for_window [title="metask"] move scratchpad; [title="metask"] scratchpad show; move position 300px 300px; resize set height 600px; resize set width 683px; move scratchpad
bindsym $mod+t [title="metask"] scratchpad show

#bindsym F1 exec i3-sensible-terminal
# kill focused window
bindsym $mod+Shift+Q kill

# start dmenu (a program launcher)
bindsym $mod+x exec dmenu_run

#scratchpad
# Make the currently focused window a scratchpad
bindsym $mod+Pause move scratchpad 
